<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat">
    <item name="android:windowBackground">@drawable/app_background_tiled</item>
  </style>

  <style name="QuestionPrompt" parent="@android:style/TextAppearance.Large">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingLeft">15dp</item>
    <item name="android:paddingRight">15dp</item>
    <item name="android:gravity">center_horizontal</item>
    <item name="android:textSize">36sp</item>
  </style>

  <style name="AnswerButton">
    <item name="android:background">@color/primary_btn_background</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/question_btn_height</item>
    <item name="android:paddingLeft">25dp</item>
    <item name="android:paddingRight">25dp</item>
  </style>
</resources>
